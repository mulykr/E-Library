@using AutoMapper
@using LiBook.Services.DTO
@using LiBook.Services.Interfaces
@model BookViewModel
@inject IWishListService WishListService
@inject IMapper Mapper
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="background-color: rgba(255, 255, 255, 0.7); padding: 2em;" class="card">
    <h2>@Model.Title</h2>
    <div class="row">
        <div class="col-md-4">
            <img src="/pics/Books/@Model.ImagePath" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="text-justify">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dd>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Edit</a>
                    <a asp-action="Index" class="btn btn-warning">Back to List</a>
                    @if (!WishListService.IsInWishList(User, Mapper.Map<BookViewModel, BookDto>(Model)))
                    {
                        @Html.ActionLink("Like", "AddToWishList", new {id = Model.Id}, new {@class = "btn btn-danger"})
                    }
                    else
                    {
                        @Html.ActionLink("Unlike", "RemoveFromWishList", new {id = Model.Id}, new { @class = "btn btn-danger" })
                    }
                </dd>
            </dl>
        </div>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/lib/jquery/dist/jquery.backstretch.js"></script>
<script type="text/javascript" src="/js/bg.js"></script>
<script type="text/javascript">
    bg("/pics/Books/@Model.ImagePath");
</script>