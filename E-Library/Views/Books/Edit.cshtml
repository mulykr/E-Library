@model LiBook.Models.BookViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>
<hr />

<form asp-action="Edit" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            @Html.HiddenFor(model => model.Id)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label>Current image</label>
                    <img src="/pics/Books/@Model.ImagePath" class="img-thumbnail" />
                </div>
                <div class="col-md-6">
                    <label>Choose files</label>
                    <div class="custom-file" id="customFile">
                        <input type="file" class="custom-file-input" id="pdf" name="pdf" aria-describedby="fileHelp">
                        <label class="custom-file-label" for="file">
                            Select pdf file...
                        </label>
                    </div>
                    <br />
                    <div class="custom-file" id="customFile">
                        <input type="file" class="custom-file-input" id="file" name="file" aria-describedby="fileHelp" onchange="readURL(this, 'selectedImg')">
                        <label class="custom-file-label" for="file">
                            Select image...
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <label>Selected image</label>
                    <img src="/pics/Books/default.png" class="img-thumbnail" id="selectedImg" />
                </div>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea name="Description" id="Description" class="form-control" rows="9">@Model.Description</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
