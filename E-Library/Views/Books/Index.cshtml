@model IEnumerable<LiBook.Models.BookViewModel>
@using LiBook.Services.DTO
@using LiBook.Services.Interfaces

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-6">
        <h2>
            <a asp-action="Index" asp-controller="Home" >LiBooks</a>
            <a class="fa fa-arrow-right"></a>
            <a >Books</a>
        </h2>
    </div>
    <div class="col-md-6 text-right">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success fa fa-plus"></a>
        }
    </div>
</div>
<input class="form-control border-right-0 border-left-0 border-top-0" style="border-bottom: 2px solid rgb(127, 0, 152)" type="text" placeholder="Search" aria-label="Search" id="search" />

<br />
<div class="row card-columns">
    @foreach (var book in Model)
    {
        <div class="col-md-3 book">
            <div class="card">
                @if (!string.IsNullOrEmpty(book.ImagePath))
                {
                    <img class="h-50 card-img-top" src="/pics/Books/@book.ImagePath" alt="Card image cap">
                }
                else
                {
                    <img class="h-50 card-img-top" src="/pics/Books/default.png" alt="Card image cap">
                }
                <div class="card-body">
                    <h5 class="card-title">@book.Title</h5>
                    <p class="card-text text-justify">
                        @if (string.IsNullOrEmpty(book.Description))
                        {
                        <p>There is no description provided for this book.</p>
                    }
                    else if (book.Description.Length > 125)
                    {
                        @(book.Description.Substring(0, 125) + "...")
                    }

                    else
                    {
                        <p>
                            @book.Description
                        </p>
                    }
                        </p>
                        <div class="text-right">
                            @await Component.InvokeAsync("BookTabActions", new { model = book })
                        </div>
                    </div>
                </div>
            </div>
        }
</div>

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/js/site.js"></script>
<script type="text/javascript">
    highlight("menu_books");
</script>
<script type="text/javascript">
    $("#search").keyup(function () {
        var txt = $('#search').val();
        $('.book').each(function () {
            $(this).hide();
            if ($(this).text().toUpperCase().indexOf(txt.toUpperCase()) != -1) {
                $(this).show();
            }
        });
    });
</script>