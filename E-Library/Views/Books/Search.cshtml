@model ICollection<string>
@using LiBook.Services.Interfaces

@{
    ViewData["Title"] = "Search";
}
@inject IGenreService GenreService
@{
    var u = GenreService.GetList().ToArray();
}

<div class="row">
    <div class="col-md-6">
    </div>
    <div class="col-md-6 text-right">
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success fa fa-plus"></a>
        }
    </div>
</div>
<input class="form-control border-right-0 border-left-0 border-top-0" style="border-bottom: 2px solid rgb(127, 0, 152)" type="text" placeholder="Search" aria-label="Search" id="search" />
<br />
<div class="poster">
        <h2>Оберіть жанр</h2>
        <div class="descr">
                    <form asp-action="Search" asp-controller="Books" method="post">
                        <input type="submit" class="btn btn-block btn-success" value="Знайти" />
                        <div class="row">
                            <div class="col-md">
                                <ul class="list-group">
                                    @foreach (var genre in u)
                                    {
                                        <li class="list-group-item author bg-white">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <div class="input-group-text">
                                                        <input type="checkbox" class="custom-checkbox" name="keys" value="@genre.Id" @(Model.Any(i => i == genre.Id) ? "checked=''" : "") />                                                   </div>
                                                </div>
                                                <label class="form-control text-info">@genre.Name</label>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </form>
        </div>
</div>
<br />
<div class="row card-columns">
    @await Component.InvokeAsync("SearchBookByGenre", Model)
</div>

<script src="/lib/jquery/dist/jquery.js"></script>
<script src="/js/site.js"></script>
<script type="text/javascript">
    highlight("menu_books");
</script>
<script type="text/javascript">
    $("#search").keyup(function () {
        var txt = $('#search').val();
        $('.book').each(function () {
            $(this).hide();
            if ($(this).text().toUpperCase().indexOf(txt.toUpperCase()) != -1) {
                $(this).show();
            }
        });
    });
</script>
