@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav justify-content-start">
            <li class="nav-item">
                <a asp-area="Identity" class="nav-link text-light" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link text-light bg-info border-0">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav justify-content-start">
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-light">Register</a></li>
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-light">Login</a></li>
    </ul>
}