@using Microsoft.AspNetCore.Identity
@using LiBook.Controllers
@using LiBook.Data.Entities

@inject SignInManager<UserProfile> SignInManager
@inject UserManager<UserProfile> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav justify-content-start">
            <li class="nav-item">
                @*<a asp-area="Identity" class="nav-link text-light" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>*@
            </li>
            <li class="nav-item">
                <a href="#"><img src="/images/heart.png" class="img-fluid heart"/></a>
            </li>
            <li class="nav-item">
                <button type="submit" class="nav-link text-light bg-info border-0">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav justify-content-start">
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link text-light">Register</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link text-light">Login</a></li>
    </ul>
}