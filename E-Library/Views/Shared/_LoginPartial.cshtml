@using Microsoft.AspNetCore.Identity
@using LiBook.Data.Entities

@inject SignInManager<UserProfile> SignInManager
@inject UserManager<UserProfile> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav justify-content-start">
            <li class="nav-item">
                <span class="nav-link text-light"><a href="/Account/Index" class="text-light">Hello, @UserManager.GetUserName(User)</a></span>
            </li>
            <li class="nav-item">
                <a href="/WishList"><img src="/images/heart.png" class="img-fluid heart"/></a>
            </li>
            <li class="nav-item">
                <input type="submit" class="nav-link text-light border-0" value="Logout" style="background-color: rgba(0, 0, 0, 0);"/>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav justify-content-start">
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Register" class="nav-link text-light">Register</a></li>
        <li class="nav-item"><a asp-area="" asp-controller="Account" asp-action="Login" class="nav-link text-light">Login</a></li>
    </ul>
}