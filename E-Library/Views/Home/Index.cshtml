@{
    ViewData["Title"] = "Home Page";
}

@using (Html.BeginForm("Search", "Home"))
{
    <div style="display:flex;">
        <input class="form-control border-right-0 border-left-0 border-top-0" style="border-bottom: 2px solid rgb(127, 0, 152)" type="text" name="key" placeholder="Search" aria-label="Search" id="search" />
        <input type="submit" class="btn"  style="background-color: rgb(127, 0, 152);color:white" value="Search"/>
    </div>
}


<div class="row">
    <div class="col-12">
        <br />
    </div>
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="/images/books.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Books</h5>
                <p class="card-text text-justify">
                    Here you can find all books available in the BooksStore. You can search them and see their authors.
                </p>
                <a href="/books" class="btn btn-success">Books</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="/images/people.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Authors</h5>
                <p class="card-text text-justify">
                    Through here you can find all authors available in the BooksStore. Also you can see which books belong to specific author.
                </p>
                <a href="/authors" class="btn btn-primary">Authors</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="/images/money.jpg" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Likes</h5>
                <p class="card-text text-justify">
                    Wish list allows you to store books that you like. You can also add short comment why the book is stored in your wish list.
                </p>
                <a href="/WishList" class="btn btn-warning">Wish list</a>
            </div>
        </div>
    </div>
</div>